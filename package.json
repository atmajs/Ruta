{
    "name": "ruta",
    "description": "Route-Value Collections",
    "author": {
        "name": "Alexander Kit",
        "email": "alex.kit@atmajs.com"
    },
    "version": "0.2.63",
    "main": "./lib/ruta.js",
    "types": "./lib/ruta.d.ts",
    "repository": {
        "type": "git",
        "url": "git://github.com/atmajs/Ruta.git"
    },
    "devDependencies": {
        "@types/jquery": "^3.2.12",
        "@types/sinon": "^2.3.3",
        "app-bundler": "0.0.89",
        "atma": "^0.12.18",
        "atma-io": "^1.2.29",
        "atma-loader-ts": "^1.1.12",
        "dts-bundle": "^0.7.3"
    },
    "scripts": {
        "test": "atma test",
        "build": "app-bundler && npm run dts",
        "watch": "app-bundler --watch",
        "server": "atma server",
        "dts": "tsc -p tsconfig-build.json && atma run tools/build-dts",
        "release": "echo \"Run atma pub -m \"message\"\""
    },
    "license": "MIT",
    "app-bundler": {
        "file": "src/export.ts",
        "outputMain": "lib/ruta.js",
        "package": {
            "module": "commonjs",
            "moduleName": "ruta",
            "moduleWrapper": "umd",
            "commonjs": {
                "output": "simplified"
            }
        },
        "extensions": {
            "io": {
                "type": "js"
            }
        },
        "defaultExtensions": {
            "js": "ts"
        },
        "middlewares": {
            "ts": [
                "atma-loader-ts:read"
            ]
        }
    },
    "atma": {
        "plugins": [
            "atma-loader-ts"
        ],
        "settings": {
            "atma-loader-ts": {
                "extensions": [
                    "test",
                    "ts"
                ],
                "typescript": {
                    "compilerOptions": {
                        "#if (TEST)": {
                            "module": "AMD"
                        },
                        "#if (!TEST)": {
                            "module": "CommonJS"
                        }
                    }
                }
            }
        }
    }
}
